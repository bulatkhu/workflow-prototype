// Global default params, used in configs
params {
    // Define input parameters
    outdir       = "results"
    mode         = "strict" // Default to 'strict' if not specified  

    samplesheet  = "data/samplesheet.csv"
    fasta1Unzip  = "data/reference/Homo_sapiens.GRCh38.dna.toplevel.fa"
    fasta1       = "data/reference/Homo_sapiens.GRCh38.dna.toplevel.fa.gz"
    genome1      = "data/genome/Homo_sapiens.GRCh38.114.chr.gtf.gz"
    genomeUnzip  = "data/genome/Homo_sapiens.GRCh38.114.chr.gtf"
}

profiles {
    // docker {
    //     process.executor = 'local'
    //     docker.enabled = true
    // }

    standard {
        // docker {
        //     enabled = true
        //     // runOptions = "-v ${projectDir}/tools/msfragger/content/MSFragger-4.3.jar:/opt/MSFragger.jar"
        //     runOptions = "-v C:/Users/Bulat/Desktop/nextflow/tools/msfragger/content/MSFragger-4.3.jar:/opt/MSFragger.jar"
        // }

        process {
            executor = 'local'
            cpus = 12
            memory = '18 GB'

            withLabel: transdecoder {
                container = 'trinityrnaseq/transdecoder:latest'
            }
            withLabel: cdhit { 
                container = 'biocontainers/cd-hit:v4.8.1-1-deb_cv1'
            }
        }
            
        docker.enabled = true
    }
    
    slurm {
        process.executor = 'slurm'
        process.queue = 'short'
    }
}